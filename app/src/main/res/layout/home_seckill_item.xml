<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/margin_size_5dp">
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/margin_size_120dp"
        android:layout_height="@dimen/margin_size_180dp"
        android:background="@drawable/seckill_item_shape"/>
    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_seckill_title"
        android:textSize="@dimen/text_size_18sp"
        android:textColor="@color/black"
        android:paddingTop="@dimen/margin_size_10dp"/>
    <TextView
        android:id="@+id/item_title_old"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_seckill_title"
        android:textSize="@dimen/text_size_18sp"
        android:textColor="@color/black_1"
        android:paddingTop="@dimen/margin_size_10dp"/>
</LinearLayout>