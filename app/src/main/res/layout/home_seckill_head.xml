<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_size_10dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/seckill_light"
        android:layout_width="@dimen/margin_size_30dp"
        android:layout_height="@dimen/margin_size_30dp"
        android:src="@drawable/home_seckill"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/seckill_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/home_seckill"
        android:textSize="@dimen/text_size_18sp"
        android:textColor="@color/black"
        android:paddingStart="@dimen/margin_size_10dp"
        android:paddingEnd="@dimen/margin_size_10dp"
        android:layout_toEndOf="@+id/seckill_light"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/tv_time_seckill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/seckill_time_shape"
        android:text="@string/seckill_time"
        android:textColor="@color/white"
        android:layout_toEndOf="@+id/seckill_time"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/seckill_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableEnd="@drawable/commend_more"
        android:text="@string/seckill_more"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18sp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:ellipsize="end"/>

</RelativeLayout>