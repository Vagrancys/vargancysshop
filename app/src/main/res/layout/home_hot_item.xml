<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="@dimen/margin_size_5dp">
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/margin_size_120dp"
        android:layout_height="@dimen/margin_size_180dp"
        android:background="@drawable/seckill_item_shape"/>
    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_seckill_title"
        android:textSize="@dimen/text_size_18sp"
        android:textColor="@color/black"
        android:paddingTop="@dimen/margin_size_10dp"
        android:ellipsize="end"
        android:maxLines="2"/>
    <TextView
        android:id="@+id/item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/text_size_14sp"
        android:textColor="@color/red"
        android:paddingTop="@dimen/margin_size_5dp"
        android:maxLines="1"/>
</LinearLayout>