<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_size_10dp">

    <CheckBox
        android:id="@+id/item_check"
        android:layout_width="@dimen/margin_size_20dp"
        android:layout_height="@dimen/margin_size_40dp"
        android:gravity="center"
        android:button="@drawable/car_check_button"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"/>
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="@dimen/margin_size_120dp"
        android:layout_height="@dimen/margin_size_100dp"
        android:src="@drawable/welcome_background_1"
        android:layout_marginStart="@dimen/margin_size_20dp"
        android:layout_marginEnd="@dimen/margin_size_20dp"
        android:layout_toEndOf="@+id/item_check"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/item_title"
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_18sp"
        android:ellipsize="end"
        android:maxLines="2"
        android:layout_toEndOf="@+id/item_image"
        android:layout_marginBottom="@dimen/margin_size_20dp"/>
    <TextView
        android:id="@+id/item_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/car_money"
        android:textSize="@dimen/text_size_18sp"
        android:textColor="@color/red"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toEndOf="@+id/item_image"
        android:layout_below="@id/item_title"/>
    <com.vargancys.vargancysshop.widget.AddSubView
        android:id="@+id/item_add_sub"
        android:layout_width="@dimen/margin_size_120dp"
        android:layout_height="@dimen/margin_size_30dp"
        android:layout_below="@+id/item_title"
        android:layout_alignParentEnd="true"/>
</RelativeLayout>